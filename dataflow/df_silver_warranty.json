{
	"name": "df_silver_warranty",
	"properties": {
		"folder": {
			"name": "Silver"
		},
		"type": "MappingDataFlow",
		"typeProperties": {
			"sources": [
				{
					"dataset": {
						"referenceName": "ds_bronze_warranty",
						"type": "DatasetReference"
					},
					"name": "source1"
				}
			],
			"sinks": [
				{
					"dataset": {
						"referenceName": "ds_silver_warranty",
						"type": "DatasetReference"
					},
					"name": "sink1"
				}
			],
			"transformations": [
				{
					"name": "derivedColumn1"
				},
				{
					"name": "derivedColumn2"
				},
				{
					"name": "select1"
				},
				{
					"name": "aggregate1"
				},
				{
					"name": "filter1"
				},
				{
					"name": "derivedColumn3"
				},
				{
					"name": "filter2"
				},
				{
					"name": "select2"
				}
			],
			"scriptLines": [
				"source(output(",
				"          claim_id as string,",
				"          claim_date as string,",
				"          sale_id as string,",
				"          repair_status as string",
				"     ),",
				"     allowSchemaDrift: true,",
				"     validateSchema: false,",
				"     isolationLevel: 'READ_UNCOMMITTED',",
				"     format: 'table') ~> source1",
				"source1 derive(repair_status_clean = lower(repair_status),",
				"          claim_date = trim(replace(claim_date, '/', '-'))) ~> derivedColumn1",
				"derivedColumn1 derive(repair_status_clean = case(\r",
				"    repair_status_clean == 'completed', 'Completed',\r",
				"    repair_status_clean == 'pending', 'Pending',\r",
				"    repair_status_clean == 'in progress', 'In Progress',\r",
				"    repair_status_clean == 'rejected', 'Rejected',\r",
				"    repair_status_clean == 'reject', 'Rejected',\r",
				"    repair_status_clean == 'pendng', 'Pending',    \r",
				"    repair_status_clean == 'completed ', 'Completed',\r",
				"    'Pending' \r",
				"),",
				"          claim_date = toDate(iif(\r",
				"    substring(claim_date,1,4) == '2024', \r",
				"        claim_date, \r",
				"        toString(toDate(claim_date,'dd-MM-yyyy'),'yyyy-MM-dd')\r",
				"), 'yyyy-MM-dd')) ~> derivedColumn2",
				"derivedColumn2 select(mapColumn(",
				"          claim_id,",
				"          claim_date,",
				"          sale_id,",
				"          repair_status_clean",
				"     ),",
				"     skipDuplicateMapInputs: true,",
				"     skipDuplicateMapOutputs: true) ~> select1",
				"select1 aggregate(groupBy(claim_id,",
				"          claim_date,",
				"          sale_id,",
				"          repair_status_clean),",
				"     dummy = count(claim_id)) ~> aggregate1",
				"aggregate1 filter(dummy == 1) ~> filter1",
				"filter1 derive(correccion = iif( dummy == 1 && isNull(sale_id), 1, 0 )) ~> derivedColumn3",
				"derivedColumn3 filter(correccion == 0) ~> filter2",
				"filter2 select(mapColumn(",
				"          claim_id,",
				"          claim_date,",
				"          sale_id,",
				"          repair_status = repair_status_clean",
				"     ),",
				"     skipDuplicateMapInputs: true,",
				"     skipDuplicateMapOutputs: true) ~> select2",
				"select2 sink(allowSchemaDrift: true,",
				"     validateSchema: false,",
				"     input(",
				"          claim_id as string,",
				"          claim_date as date,",
				"          sale_id as string,",
				"          repair_status as string",
				"     ),",
				"     deletable:false,",
				"     insertable:true,",
				"     updateable:false,",
				"     upsertable:false,",
				"     format: 'table',",
				"     skipDuplicateMapInputs: true,",
				"     skipDuplicateMapOutputs: true,",
				"     errorHandlingOption: 'stopOnFirstError',",
				"     mapColumn(",
				"          claim_id,",
				"          claim_date,",
				"          sale_id,",
				"          repair_status",
				"     )) ~> sink1"
			]
		}
	}
}